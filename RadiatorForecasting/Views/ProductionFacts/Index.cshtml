@model IEnumerable<RadiatorForecasting.Models.ProductionFact>

<h1>Фактические данные выпуска</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Средняя температура</th>
                <th>Цена</th>
                <th>Цена конкурентов</th>
                <th>Скидка</th>
                <th>Кол-во радиаторов (Ал/Мед)</th>
                <th>Прогноз на месяц (Ал/Мед)</th>
                <th>Запасы (текущие/рекомендуемые)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fact in Model)
            {
                <tr>
                    <td>@fact.Id</td>
                    <td>@fact.AverageTemperature</td>
                    <td>@fact.Price</td>
                    <td>@fact.CompetitorPrice</td>
                    <td>@fact.Discount</td>
                    <td>@($"{fact.AluminumRadiatorsProduced} / {fact.CopperRadiatorsProduced}")</td>
                    <td>@($"{fact.MonthlyForecastAluminum ?? 0} / {fact.MonthlyForecastCopper ?? 0}")</td>
                    <td>
                        Ал: @fact.CurrentAluminumStock / @fact.RecommendedAluminumStock<br />
                        Мед: @fact.CurrentCopperStock / @fact.RecommendedCopperStock
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h2>Прогнозирование спроса на следующий месяц</h2>

<form asp-action="Index" method="post" class="mt-4">
    <div class="row">
        <div class="col-md-3">
            <input type="number" name="averageTemperature" class="form-control" placeholder="Температура"
                   value="@ViewBag.InputValues?.averageTemperature ?? 0" required>
        </div>
        <div class="col-md-3">
            <input type="number" name="price" class="form-control" placeholder="Цена"
                   value="@ViewBag.InputValues?.price ?? 0" required>
        </div>
        <div class="col-md-3">
            <input type="number" name="competitorPrice" class="form-control" placeholder="Цена конкурентов"
                   value="@ViewBag.InputValues?.competitorPrice ?? 0" required>
        </div>
        <div class="col-md-3">
            <input type="number" name="discount" class="form-control" placeholder="Скидка"
                   value="@ViewBag.InputValues?.discount ?? 0" required>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Спрогнозировать</button>
</form>

@if (TempData["PredictionResult"] != null)
{
    <div class="alert alert-success mt-3">
        <strong>Результат прогноза:</strong> @TempData["PredictionResult"]
    </div>
}
