@model IEnumerable<RadiatorForecasting.Models.ProductionFact>

<h1>Фактические данные выпуска</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Средняя температура</th>
                <th>Цена</th>
                <th>Цена конкурентов</th>
                <th>Скидка</th>
                <th>Кол-во радиаторов (Ал/Мед)</th>
                <th>Прогноз на месяц (Ал/Мед)</th>
                <th>Запасы (текущие/рекомендуемые)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fact in Model)
            {
                <tr>
                    <td>@fact.Id</td>
                    <td>@fact.AverageTemperature</td>
                    <td>@fact.Price</td>
                    <td>@fact.CompetitorPrice</td>
                    <td>@fact.Discount</td>
                    <td>@fact.AluminumRadiatorsProduced / @fact.CopperRadiatorsProduced</td>
                    <td>
                        @if (ViewBag.PredictionResult != null)
                        {
                            @("- / -")
                        }
                        else
                        {
                            @("- / -")
                        }
                    </td>
                    <td>
                        <text>
                            Ал: - / -<br />
                            Мед: - / -
                        </text>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h2>Прогнозирование спроса на следующий месяц</h2>

<!-- Форма для ввода данных -->
<form asp-action="Index" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Средняя температура</th>
                <th>Цена</th>
                <th>Цена конкурентов</th>
                <th>Скидка</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="number"
                           name="averageTemperature"
                           min="-40"
                           max="40"
                           required
                           value="@ViewBag.InputValues?.averageTemperature">
                </td>
                <td>
                    <input type="number"
                           name="price"
                           min="1900"
                           max="2800"
                           required
                           value="@ViewBag.InputValues?.price">
                </td>
                <td>
                    <input type="number"
                           name="competitorPrice"
                           min="1800"
                           max="3000"
                           required
                           value="@ViewBag.InputValues?.competitorPrice">
                </td>
                <td>
                    <input type="number"
                           name="discount"
                           min="1"
                           max="30"
                           required
                           value="@ViewBag.InputValues?.discount">
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Кнопка отправки -->
    <button type="submit" class="btn btn-primary">Спрогнозировать</button>
</form>

<!-- Отображение результата прогноза -->
@if (ViewBag.PredictionResult != null)
{
    <div class="alert alert-success mt-3">
        <strong>Результат прогноза:</strong> @ViewBag.PredictionResult
    </div>
}
